<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_catepic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_catename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:tooltipText="catename"
        app:layout_constraintEnd_toEndOf="@+id/text_cateintro"
        app:layout_constraintStart_toEndOf="@+id/image_catepic"
        app:layout_constraintTop_toTopOf="@+id/image_catepic" />

    <TextView
        android:id="@+id/text_cateintro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:maxLines="2"
        android:tooltipText="cateintro"
        app:layout_constraintEnd_toStartOf="@+id/image_forward"
        app:layout_constraintStart_toEndOf="@+id/image_catepic"
        app:layout_constraintTop_toBottomOf="@+id/text_catename" />

    <TextView
        android:id="@+id/text_pauseinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:tooltipText="pauseinfo"
        app:layout_constraintBottom_toBottomOf="@+id/image_catepic"
        app:layout_constraintEnd_toEndOf="@+id/text_cateintro"
        app:layout_constraintStart_toEndOf="@+id/image_catepic" />

    <ImageView
        android:id="@+id/image_forward"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_cateintro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_cateintro"
        app:srcCompat="@mipmap/forward" />
</androidx.constraintlayout.widget.ConstraintLayout>

